<script>
	for(var i=1; i<=7;i++){
		for(var j=1;j<=7-i;j++){
			document.write("&nbsp;");
		}
		for(var k=1;k<=i*2-1;k++){
			document.write("*");
		}
		document.write("<br />");
	}
	
	for(var i=6;i>=1;i--){
		for(var j =1;j<=7-i;j++){
			document.write("&nbsp;");
		}
		for(var k =1;k<=i*2-1;k++){
			document.write("*");
		}
		document.write("<br />");
	}
	
	
	
</script>
