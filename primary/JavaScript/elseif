<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
	</head>
	<body>
		<select>
			<option value="1">html</option>
			<option value="2">JS</option>
			<option value="3">CSS</option>
			<option value="4">java</option>
		</select>
		<button class="butn">确定</button>
	</body>
	<script>
		var btn =document.querySelector(".butn")
		btn.onclick = function(){
			var sel =document.querySelector("select")
			var value = sel.value
			if(value==1){
				alert("你选择的是HTML")
			}else if(value==2){
				alert('你选择的是JS')
			}else if (value==3){
				alert('你选择的是CSS')
			}else if(value==4){
				alert('你选择的是JAVA')
			}else{
				alert('请选择正确的数字')
			}
		}
	</script>
</html>
